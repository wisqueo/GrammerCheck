{
  "manifest_version": 2,
  "name": "Wisqueo Check",
  "version": "1.0.0",
  "description": "Instantly fix grammar errors in any text input with AI-powered suggestions",
  
  "permissions": [
    "activeTab",
    "https://api-inference.huggingface.co/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    "icons/*"
  ]
} 